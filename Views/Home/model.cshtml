
@{
    ViewBag.Title = "model";
}

<h2>model</h2>

<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Open Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">

                @{
                    ViewBag.Title = "jsdemo";
                }



                @*Layout a BS grid that allows me to orginize the controls reqiured for exercise 1*@

               
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 h2 text-center">
                            <b>JavaScript Exercise 1: Learn Math...</b>
                        </div>
                    </div>

                    <hr />

                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-offset-2 text-bold">Enter any number 0-9</div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-md-2">Number 1</div>
                            <div class="col-md-6">
                                <input type="number" id="number1" />
                            </div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-md-2">Number 2</div>
                            <div class="col-md-6">
                                <input type="number" id="number2" />
                            </div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-md-2">Number 3</div>
                            <div class="col-md-6">
                                <input type="number" id="number3" />
                            </div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-md-2">Number 3</div>
                            <div class="col-md-6">
                                <input type="number" id="number4" />
                            </div>
                        </div>

                        <br />

                        <div class="row">
                            <div class="col-md-2">Number 5</div>
                            <div class="col-md-6">
                                <input type="number" id="number5" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="col-md-2">
                        <br />
                        <br />
                        <div class="row">
                            <div class="col-md-2">
                                <button id="btnMath" class="btn btn-success">Calculate</button>
                            </div>
                        </div>
                        <br />
                        <br />
                        <div class="row">
                            <div class=" col-md-2">
                                <button id="btnClear" class="btn btn-danger">Clear</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-offset-4 text-bold">Here are your results</div>
                        </div>

                        <br />


                        <div class="row">
                            <div class="col-md-offset-4 text-bold">
                                <div id="sum"></div> 
                            </div>
                        </div>
                    </div>


                </div>

                @section scripts{
                    @*After all of my HTML code I can add my <script> tags for js/jQuery</script>*@
                    <script>
                //step 1: Acquire the user input
                $("#btnMath").click(function () {

                    var number1 = Number($("#number1").val());
                    var number2 = Number($("#number2").val());
                    var number3 = Number($("#number3").val());
                    var number4 = Number($("#number4").val());
                    var number5 = Number($("#number5").val());

                    //step 2: Do somthing with it
                    var sum = number1 + number2 + number3 + number4 + number5;



                    //step 3: Out the results to the screen
                    $("#sum").text("Sum = " + sum);


                });


                $("#btnClear").click(function () {
                    $("#sum").text("");
                    $("#number1, #number2, #number3, #number4, #number5").val("");
                });










                    </script>
                }











            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>